<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button
      class="navbar-toggler"
      type="button"
      data-toggle="collapse"
      data-target="#navbarNavAltMarkup"
      aria-controls="navbarNavAltMarkup"
      aria-expanded="false"
      aria-label="Toggle navigation"
    >
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup" style="justify-content: space-between; align-items: center;" >
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <% if(user){ %>
        <div>
          <form class="form-inline" action="/logout" method="POST">
            <div class="form-group" >
              <p style="margin: 0">Loggin in as: <b style="padding-right: 1rem;"><%= user.email %></b></p>
              <button type="submit" class="btn" style="border: 1px solid black">Logout</button>
            </div>
          </form>
        </div>
      <% } else{%>
        <div style="display: flex; gap: 1rem;">
          <form class="form-inline" action="/login" method="GET">
            <div>
              <button type="submit" class="btn" style="border: 1px solid black">Login</button>
            </div>
          </form>
          <form class="form-inline" action="/register" method="GET">
            <div>
              <button type="submit" class="btn" style="border: 1px solid black">Register</button>
            </div>
          </form>
        </div>
      <% } %>
    </div>
  </nav>
</header>